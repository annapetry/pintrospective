<div id="board-show-title">
  <h1
    class="board-title">
      <%= board.escape('title') %>
  </h1>
  <h4
    class="board-description">
      <%= board.escape('description') %>
  </h4>
</div>
  <div class="btn-group large-section-divider board-show">
    <span id="wider">
      <% if (user === board.get('user_id')) { %>
        <button class="btn btn-danger red-button">
          Add people to board
        </button>
        <button
          data-toggle="modal"
          data-target="#editBoardModal"
          class="edit-board-button red-button">
          Edit Board
        </button>
      <% } else { %>
        <div class="non-current-user">
          <a href="#/users/<%= board.get('user_id') %>">
            <img src="<%= board.escape('url') %>">
            <p><%= board.escape('username') %></p>
          </a>
          <button class="btn btn-danger red-button" id="board-follow-button">
            Follow Board
          </button>
        </div>
      <% } %>
    </span>
    <button
      type="button"
      id="longish-btn"
      class="btn btn-default pin-count">
      <p pin-count-p><%= board.get('pin_count') %> Pins</p>
    </button>
    <button
      type="button"
      id="long-btn"
      class="btn btn-default follower_count">
<!-- TODO get follower count for THIS board, which includes the followers of the owner of this board -->
      <p><%= board.escape('follower_count') %> Followers</p>
    </button>
  </div>


<div class="container">
    <div id="pins"></div>
</div>


<!-- Edit Board Modal -->
<div class="modal fade" id="editBoardModal" tabindex="-1" role="dialog" aria-labelledby="editBoard" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <form role="form" id="edit-board-form" class="form-horizontal">
        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editBoard">Edit Board / <span id="sub-board-title"><p> <%= board.escape('title')%></p></span></h4>
      </div> <!-- Close modal header -->

        <div class="modal-body edit-board-form-body">
          <div class="form-group">
            <label for="board-title" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="board-title"
                name="board[title]"
                value="<%= board.escape('title') %>">
            </div>
          </div>
          <div class="form-group">
            <label
              for="board-desc"
              class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
                <textarea
                  class="form-control"
                  id="board-desc"
                  name="board[description]"
                  placeholder="What's your board about?"></textarea>
            </div>
          </div>

          <div class="form-group">
            <label
              for="board-cat"
              class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">

            <select
              class="form-control"
              name="board[category]"
              id="board-cat">
              <option>What kind of board is it?</option>
              <option>Avante Garde</option>
              <option>Impressionism</option>
              <option>Post Modern</option>
              <option>Classical</option>
              <option>Cubism</option>
              <option>Other</option>
            </select>

            </div>
          </div>


        </div> <!-- Close modal body -->

        <div class="modal-footer edit-board-form-footer">
          <div class="delete">
            <button
              type="button"
              class="btn btn-default delete-board"
              data-toggle="modal"
              data-target="#deleteBoardModal"
              data-dismiss="modal">
              Delete Board
            </button>
            <span class="delete-warning">You won't be able to undo this!</span>
          </div>
          <button
            type="button"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            id="submit-board-edit-form"
            class="btn btn-danger red-button">
            Save Changes
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->



<!-- Last Chance Modal -->
<div class="modal fade" id="deleteBoardModal" tabindex="-1" role="dialog" aria-labelledby="editBoard" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editBoard">Delete this Board?</h4>
      </div> <!-- Close modal header -->

        <div class="modal-body delete-board-form-body">
          <p>Are you sure you want to permanently delete this Board?</p>
        </div> <!-- Close modal body -->

        <div class="modal-footer delete-footer">
            <button
            type="button"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="button"
            id="delete-board"
            class="btn btn-danger red-button">
            Delete Board
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->





