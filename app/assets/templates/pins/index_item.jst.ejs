<div
  class="panel panel-default pin-panel"
  data-toggle="modal"
  data-target="#pinZoom">
    <div class="panel-body pin-image">
      <img src="<%= pin.escape('url') %>">
    </div>
    <div class="panel-body">
      <p><%= pin.escape('description')%></p>
    </div>
    <div class="panel-footer">
      <p>Pinned by <%= pin.escape('username') %></p>
    </div>
</div>


<!-- Modal for Larger Pin View-->
<div class="modal fade" id="pinZoom">
  <div class="modal-dialog modal-lg">
    <div class="modal-content pinContent">
      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body pinLg">
        <img src="<%= pin.escape('url') %>">
      </div>
      <div class="modal-footer">
      </div>
    </div> <!-- Close of modal-content -->
  </div> <!-- Close of modal-dialog -->
</div> <!-- Close of modal -->


<script>
  $('li a').click(function (e) {
      $('#pinZoom img').attr('src', $(this).attr('data-img-url'));
  });
</script>


