<div
  class="panel panel-default pin-panel">
    <div class="panel-body pin-image">
      <img class="focal-img" src="<%= pin.escape('url') %>">
    </div>
    <div
      class="panel-body pin-desc">
      <p><%= pin.escape('description')%></p>
    </div>
    <div class="panel-footer" id="thumb-panel-footer">
      <img class="pin-user " src="<%= pin.escape('pinner_img')%>">
      <p class="pinner"><%= pin.escape('username') %></p>
    </div>
</div>


<!-- Modal for Larger Pin View-->
<div class="modal fade" id="pinZoom">
  <!-- <div class="modal-dialog modal-lg"> -->
    <div class="modal-content pinContent">
      <div class="modal-body pinLg">
        <img id="pin-img" src="<%= pin.escape('url') %>">
      </div>
      <div class="panel-body">
        <p id="desc"><%= pin.escape('description')%></p>
      </div>
      <div class="modal-footer">
        <div id="pinner-id" class="pinner-id">
          <img class="pin-user-img" src="<%= pin.escape('pinner_img')%>">
          <p class="pinner"><%= pin.escape('username') %></p>
        </div>
        <% if (pin.escape('pinner_id') == current_user ) { %>
          <button
            data-dismiss="modal"
            class="btn btn-danger red-button edit-pin-btn">
            Edit Pin
          </button>
        <% } %>
      </div>
    </div> <!-- Close of modal-content -->
  <!-- </div> --> <!-- Close of modal-dialog -->
</div> <!-- Close of modal -->



<!-- Edit Pin Modal -->
<div class="modal fade" id="editPinModal" tabindex="-1" role="dialog" aria-labelledby="editPin" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <form role="form" id="edit-pin-form" class="form-horizontal">
        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editBoard">Edit Pin</h4>
      </div> <!-- Close modal header -->

        <div class="modal-body edit-board-form-body">
          <div class="form-group">
            <label
              for="pin-desc"
              class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
                <textarea
                  class="form-control"
                  id="board-desc"
                  name="pin[description]"><%= pin.escape('description') %></textarea>
            </div>
          </div>
        </div> <!-- Close modal body -->

        <div class="modal-footer edit-board-form-footer">
          <div class="delete">
            <button
              type="button"
              class="btn btn-default delete-board"
              id="close-modal">
              Delete Pin
            </button>
            <span class="delete-warning">You won't be able to undo this!</span>
          </div>
          <button
            type="button"
            id="cancel"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            id="submit-pin-edit-form"
            class="btn btn-danger red-button">
            Save Changes
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->



<!-- Last Chance Modal -->
<div class="modal fade" id="deletePinModal" tabindex="-1" role="dialog" aria-labelledby="editPin" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
        <button type="button"
          class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editPin">Delete this Pin?</h4>
      </div> <!-- Close modal header -->

        <div class="modal-body delete-board-form-body">
          <p>Are you sure you want to permanently delete this Pin?</p>
        </div> <!-- Close modal body -->

        <div class="modal-footer delete-footer">
            <button
            type="button"
            id="cancel"
            class="btn btn-default"
            data-dismiss="modal">
            Cancel
          </button>
          <button
            type="button"
            id="delete-pin"
            class="btn btn-danger red-button">
            Delete Pin
          </button>
        </div> <!-- Close modal footer -->
      </form>

    </div> <!-- Close of modal content -->
  </div> <!-- Close of modal dialog -->
</div> <!-- Close of top-level modal div -->




